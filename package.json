{
  "name": "biz-buddy-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for BizBuddy application",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:auth": "playwright test auth.setup.ts",
    "test:signup": "playwright test signup-flow.spec.ts",
    "test:visual": "playwright test visual.spec.ts",
    "test:report": "playwright show-report",
    "test:production": "ENVIRONMENT=production playwright test",
    "test:staging": "ENVIRONMENT=staging playwright test",
    "auth:refresh": "node auth-manager.js",
    "auth:check": "node -e \"new (require('./auth-manager.js'))().checkAuthValidity().then(v => console.log(JSON.stringify(v, null, 2)))\"",
    "test:safe": "node test-with-auth.js",
    "test:simple": "node test-with-auth.js tests/e2e/test-simple.spec.ts --config playwright.config.simple.ts",
    "auth:encode": "./scripts/encode-auth-state.sh",
    "ci:prepare": "node scripts/prepare-auth-for-ci.js",
    "ci:test": "npm run ci:prepare && npm test",
    "auth:push": "node auth-refresh-and-deploy.js --push-only",
    "auth:refresh-deploy": "node auth-refresh-and-deploy.js",
    "railway:deploy": "railway up",
    "deploy": "npm run auth:push && npm run railway:deploy",
    "test:fresh-signup": "playwright test tests/e2e/fresh-signup-flow.spec.ts --config playwright.config.no-auth.ts",
    "test:oauth-flow": "playwright test tests/e2e/google-oauth-flow.spec.ts --config playwright.config.no-auth.ts",
    "test:manual-signup": "playwright test tests/e2e/manual-signup-test.spec.ts --config playwright.config.no-auth.ts --headed"
  },
  "keywords": ["e2e", "testing", "playwright", "bizbuddy"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "typescript": "^5.3.0"
  }
}